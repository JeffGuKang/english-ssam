{
  "name": "opencode-english-ssam",
  "version": "1.8.0",
  "description": "English tutor plugin for OpenCode - Your friendly Ssam (teacher) that corrects and improves your English while coding",
  "keywords": [
    "opencode",
    "english",
    "grammar",
    "tutor",
    "learning",
    "esl",
    "korean",
    "language",
    "ai-assistant"
  ],
  "author": "Jeff Kang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeffGuKang/english-ssam.git"
  },
  "files": [
    "AGENTS.md",
    "scripts/",
    "command/",
    "plugin/",
    "src/",
    "README.md",
    "README.ko.md",
    "README.ja.md",
    "README.zh.md"
  ],
  "main": "src/index.ts",
  "devDependencies": {
    "@opencode-ai/plugin": "latest",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "test": "bats tests/install/ tests/commands/",
    "test:install": "bats tests/install/",
    "test:commands": "bats tests/commands/",
    "test:all": "./tests/run_all_tests.sh",
    "prepublishOnly": "npm test",
    "install": "./scripts/install.sh --tool=opencode --global",
    "release": "standard-version"
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "VERSION",
        "type": "plain-text"
      }
    ]
  }
}
